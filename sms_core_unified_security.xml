<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========== SMS MESSAGE GROUPS ========== -->
        <record id="group_sms_user" model="res.groups">
            <field name="name">SMS User</field>
            <field name="category_id" ref="base.module_category_communication"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can send and view own SMS messages</field>
        </record>

        <record id="group_sms_manager" model="res.groups">
            <field name="name">SMS Manager</field>
            <field name="category_id" ref="base.module_category_communication"/>
            <field name="implied_ids" eval="[(4, ref('group_sms_user'))]"/>
            <field name="comment">Can manage all SMS messages and configuration</field>
        </record>

        <!-- ========== SMS MESSAGE ACCESS RIGHTS ========== -->
        <record id="access_sms_message_user" model="ir.model.access">
            <field name="name">SMS Message User Access</field>
            <field name="model_id" ref="model_sms_message"/>
            <field name="group_id" ref="group_sms_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="access_sms_message_manager" model="ir.model.access">
            <field name="name">SMS Message Manager Access</field>
            <field name="model_id" ref="model_sms_message"/>
            <field name="group_id" ref="group_sms_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ========== SMS PROVIDER ACCESS RIGHTS ========== -->
        <record id="access_sms_provider_manager" model="ir.model.access">
            <field name="name">SMS Provider Manager Access</field>
            <field name="model_id" ref="model_sms_provider"/>
            <field name="group_id" ref="group_sms_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_sms_provider_user" model="ir.model.access">
            <field name="name">SMS Provider User Read Access</field>
            <field name="model_id" ref="model_sms_provider"/>
            <field name="group_id" ref="group_sms_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========== SMS TEMPLATE ACCESS RIGHTS ========== -->
        <record id="access_sms_template_manager" model="ir.model.access">
            <field name="name">SMS Template Manager Access</field>
            <field name="model_id" ref="model_sms_template"/>
            <field name="group_id" ref="group_sms_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_sms_template_user" model="ir.model.access">
            <field name="name">SMS Template User Access</field>
            <field name="model_id" ref="model_sms_template"/>
            <field name="group_id" ref="group_sms_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========== SMS BLACKLIST ACCESS RIGHTS ========== -->
        <record id="access_sms_blacklist_manager" model="ir.model.access">
            <field name="name">SMS Blacklist Manager Access</field>
            <field name="model_id" ref="model_sms_blacklist"/>
            <field name="group_id" ref="group_sms_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_sms_blacklist_user" model="ir.model.access">
            <field name="name">SMS Blacklist User Read Access</field>
            <field name="model_id" ref="model_sms_blacklist"/>
            <field name="group_id" ref="group_sms_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========== RECORD RULES ========== -->

        <!-- SMS Message - Users see only their own messages -->
        <record id="rule_sms_message_own" model="ir.rule">
            <field name="name">SMS Message Own - SMS User Access</field>
            <field name="model_id" ref="model_sms_message"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sms_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- SMS Message - Managers see all messages -->
        <record id="rule_sms_message_all" model="ir.rule">
            <field name="name">SMS Message All - SMS Manager Access</field>
            <field name="model_id" ref="model_sms_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sms_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>