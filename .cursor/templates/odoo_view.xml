<?xml version="1.0" encoding="utf-8"?>
<!-- Template para Views Odoo -->
<odoo>
    <data>

        <!-- ============================================ -->
        <!-- TREE VIEW (Lista) -->
        <!-- ============================================ -->
        <record id="view_module_model_tree" model="ir.ui.view">
            <field name="name">module.model.tree</field>
            <field name="model">module.model_name</field>
            <field name="arch" type="xml">
                <tree string="Lista"
                      decoration-muted="active == False"
                      decoration-success="state == 'done'"
                      decoration-danger="state == 'cancel'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- FORM VIEW (Formulário) -->
        <!-- ============================================ -->
        <record id="view_module_model_form" model="ir.ui.view">
            <field name="name">module.model.form</field>
            <field name="model">module.model_name</field>
            <field name="arch" type="xml">
                <form string="Formulário">
                    <!-- Header com botões e statusbar -->
                    <header>
                        <button name="action_confirm"
                                string="Confirmar"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_done"
                                string="Concluir"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_cancel"
                                string="Cancelar"
                                type="object"
                                attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,done"/>
                    </header>

                    <!-- Sheet principal -->
                    <sheet>
                        <!-- Ribbon de arquivado -->
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>

                        <!-- Título -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nome..."/>
                            </h1>
                        </div>

                        <!-- Grupo principal -->
                        <group>
                            <group name="group_left">
                                <field name="partner_id"/>
                                <field name="user_id"/>
                            </group>
                            <group name="group_right">
                                <!-- Campos adicionais -->
                            </group>
                        </group>

                        <!-- Notebook com abas -->
                        <notebook>
                            <page string="Informações Gerais" name="info">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>

                            <page string="Detalhes" name="details">
                                <!-- Conteúdo da aba -->
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter (histórico e mensagens) -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- SEARCH VIEW (Filtros e Buscas) -->
        <!-- ============================================ -->
        <record id="view_module_model_search" model="ir.ui.view">
            <field name="name">module.model.search</field>
            <field name="model">module.model_name</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <!-- Campos de busca -->
                    <field name="name"
                           filter_domain="[('name', 'ilike', self)]"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>

                    <!-- Separador -->
                    <separator/>

                    <!-- Filtros -->
                    <filter string="Meus Registros"
                            name="my_records"
                            domain="[('user_id', '=', uid)]"/>
                    <filter string="Ativos"
                            name="active"
                            domain="[('active', '=', True)]"/>
                    <filter string="Arquivados"
                            name="inactive"
                            domain="[('active', '=', False)]"/>

                    <separator/>

                    <filter string="Rascunho"
                            name="state_draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmado"
                            name="state_confirmed"
                            domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Concluído"
                            name="state_done"
                            domain="[('state', '=', 'done')]"/>

                    <!-- Agrupamentos -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Responsável"
                                name="group_user"
                                context="{'group_by': 'user_id'}"/>
                        <filter string="Status"
                                name="group_state"
                                context="{'group_by': 'state'}"/>
                        <filter string="Parceiro"
                                name="group_partner"
                                context="{'group_by': 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- KANBAN VIEW (Cards) -->
        <!-- ============================================ -->
        <record id="view_module_model_kanban" model="ir.ui.view">
            <field name="name">module.model.kanban</field>
            <field name="model">module.model_name</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge badge-pill">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                             class="oe_kanban_avatar o_image_24_cover"
                                             alt="User"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- ACTION (Janela/Menu) -->
        <!-- ============================================ -->
        <record id="action_module_model" model="ir.actions.act_window">
            <field name="name">Modelo</field>
            <field name="res_model">module.model_name</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{
                'search_default_active': 1,
                'search_default_my_records': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nenhum registro encontrado!
                </p>
                <p>
                    Clique no botão "Criar" para adicionar um novo registro.
                </p>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- MENU ITEM -->
        <!-- ============================================ -->
        <!--
        <menuitem id="menu_module_model"
                  name="Modelo"
                  parent="parent_menu_id"
                  action="action_module_model"
                  sequence="10"/>
        -->

    </data>
</odoo>
