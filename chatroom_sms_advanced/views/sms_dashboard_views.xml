<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_sms_dashboard_tree" model="ir.ui.view">
        <field name="name">sms.dashboard.tree</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <tree string="SMS Statistics" create="false" edit="false" delete="false">
                <field name="period"/>
                <field name="provider_id"/>
                <field name="campaign_id"/>
                <field name="total_messages"/>
                <field name="total_sent"/>
                <field name="total_delivered"/>
                <field name="total_failed"/>
                <field name="delivery_rate" widget="percentage"/>
                <field name="total_cost" widget="monetary"/>
                <field name="avg_cost_per_sms"/>
            </tree>
        </field>
    </record>

    <!-- Graph View - Line Chart -->
    <record id="view_sms_dashboard_graph" model="ir.ui.view">
        <field name="name">sms.dashboard.graph</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <graph string="SMS Analytics" type="line">
                <field name="period" type="row"/>
                <field name="total_sent" type="measure"/>
                <field name="total_delivered" type="measure"/>
                <field name="total_failed" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Graph View - Bar Chart -->
    <record id="view_sms_dashboard_graph_bar" model="ir.ui.view">
        <field name="name">sms.dashboard.graph.bar</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <graph string="SMS Analytics" type="bar">
                <field name="provider_id" type="row"/>
                <field name="total_sent" type="measure"/>
                <field name="total_delivered" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_sms_dashboard_pivot" model="ir.ui.view">
        <field name="name">sms.dashboard.pivot</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <pivot string="SMS Analytics" display_quantity="true">
                <field name="period" type="row"/>
                <field name="provider_id" type="col"/>
                <field name="total_sent" type="measure"/>
                <field name="total_delivered" type="measure"/>
                <field name="total_cost" type="measure"/>
                <field name="delivery_rate" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sms_dashboard_search" model="ir.ui.view">
        <field name="name">sms.dashboard.search</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <search string="SMS Dashboard">
                <field name="period"/>
                <field name="provider_id"/>
                <field name="campaign_id"/>
                <filter string="Today" name="today" domain="[('period', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('period', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('period', '&gt;=', (context_today().strftime('%Y-%m-01')))]"/>
                <filter string="Last 30 Days" name="last_30_days" domain="[('period', '&gt;=', (context_today() - relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 90 Days" name="last_90_days" domain="[('period', '&gt;=', (context_today() - relativedelta(days=90)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="With Campaign" name="with_campaign" domain="[('campaign_id', '!=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Period" name="group_period" context="{'group_by': 'period'}"/>
                    <filter string="Provider" name="group_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="Campaign" name="group_campaign" context="{'group_by': 'campaign_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View - Dashboard Cards -->
    <record id="view_sms_dashboard_kanban" model="ir.ui.view">
        <field name="name">sms.dashboard.kanban</field>
        <field name="model">sms.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false" edit="false" delete="false">
                <field name="period"/>
                <field name="provider_id"/>
                <field name="total_messages"/>
                <field name="total_sent"/>
                <field name="total_delivered"/>
                <field name="delivery_rate"/>
                <field name="total_cost"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="period"/>
                                    </strong>
                                    <br/>
                                    <small><field name="provider_id"/></small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong><i class="fa fa-paper-plane text-info"/> Sent</strong><br/>
                                        <span class="o_value"><t t-esc="record.total_sent.value"/></span>
                                    </div>
                                    <div class="col-6">
                                        <strong><i class="fa fa-check-circle text-success"/> Delivered</strong><br/>
                                        <span class="o_value"><t t-esc="record.total_delivered.value"/></span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <strong><i class="fa fa-percent text-primary"/> Rate</strong><br/>
                                        <span class="o_value"><t t-esc="record.delivery_rate.value"/>%</span>
                                    </div>
                                    <div class="col-6">
                                        <strong><i class="fa fa-money text-warning"/> Cost</strong><br/>
                                        <span class="o_value">R$ <t t-esc="record.total_cost.value"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sms_dashboard" model="ir.actions.act_window">
        <field name="name">SMS Dashboard</field>
        <field name="res_model">sms.dashboard</field>
        <field name="view_mode">graph,pivot,tree,kanban</field>
        <field name="context">{'search_default_last_30_days': 1, 'search_default_group_period': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No SMS statistics available yet
            </p>
            <p>
                Send some SMS messages to see analytics here.
            </p>
        </field>
    </record>

</odoo>
