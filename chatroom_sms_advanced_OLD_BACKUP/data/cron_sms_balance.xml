<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job: Update SMS Balance Daily -->

        <record id="ir_cron_sms_balance_update" model="ir.cron">
            <field name="name">SMS - Atualizar Saldo Diariamente</field>
            <field name="model_id" ref="model_chatroom_sms_api"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_balance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
