<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Base Form View -->
        <record id="view_chatroom_sms_api_form" model="ir.ui.view">
            <field name="name">chatroom.sms.api.form</field>
            <field name="model">chatroom.sms.api</field>
            <field name="arch" type="xml">
                <form string="API SMS">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="update_balance" type="object"
                                    class="oe_stat_button" icon="fa-refresh"
                                    string="Atualizar Saldo"
                                    help="Consulta o saldo atual na API Kolmeya"/>
                        </div>

                        <group>
                            <group name="main_info">
                                <field name="name" string="Nome" required="1"/>
                                <field name="api_id" string="API ID"/>
                                <field name="api_key" password="True" required="1"/>
                                <field name="base_url" required="1"/>
                                <field name="active"/>
                            </group>
                        </group>

                        <separator string="Configuração de Webhook"/>
                        <group>
                            <field name="webhook_url" widget="url" placeholder="https://seu-servidor.com/webhook/sms"/>
                        </group>

                        <separator string="Controle de Saldo"/>
                        <group>
                            <group>
                                <field name="balance" readonly="1"/>
                                <field name="balance_last_update" readonly="1"/>
                            </group>
                            <group>
                                <field name="balance_warning_threshold"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_chatroom_sms_api_tree" model="ir.ui.view">
            <field name="name">chatroom.sms.api.tree</field>
            <field name="model">chatroom.sms.api</field>
            <field name="arch" type="xml">
                <tree string="APIs SMS" decoration-muted="not active">
                    <field name="name"/>
                    <field name="api_id"/>
                    <field name="balance"/>
                    <field name="balance_last_update"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_chatroom_sms_api_search" model="ir.ui.view">
            <field name="name">chatroom.sms.api.search</field>
            <field name="model">chatroom.sms.api</field>
            <field name="arch" type="xml">
                <search string="Buscar API SMS">
                    <field name="name"/>
                    <field name="api_id"/>
                    <separator/>
                    <filter string="Ativos" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inativos" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_chatroom_sms_api" model="ir.actions.act_window">
            <field name="name">API SMS</field>
            <field name="res_model">chatroom.sms.api</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure sua API SMS
                </p>
                <p>
                    Configure a integração com a API Kolmeya para envio de SMS.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_chatroom_sms_api"
                  name="Configuração API"
                  parent="chatroom.menu_chatroom_root"
                  action="action_chatroom_sms_api"
                  sequence="50"/>

    </data>
</odoo>
