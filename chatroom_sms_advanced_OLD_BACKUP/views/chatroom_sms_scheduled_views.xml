<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Kanban View -->
        <record id="view_chatroom_sms_scheduled_kanban" model="ir.ui.view">
            <field name="name">chatroom.sms.scheduled.kanban</field>
            <field name="model">chatroom.sms.scheduled</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                    <field name="name"/>
                    <field name="room_id"/>
                    <field name="scheduled_date"/>
                    <field name="state"/>
                    <field name="message"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill"
                                              t-attf-class="#{record.state.raw_value === 'draft' ? 'badge-secondary' : record.state.raw_value === 'scheduled' ? 'badge-info' : record.state.raw_value === 'sent' ? 'badge-success' : 'badge-danger'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="message" widget="text" limit="80"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <i class="fa fa-clock-o"/> <field name="scheduled_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="room_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_chatroom_sms_scheduled_tree" model="ir.ui.view">
            <field name="name">chatroom.sms.scheduled.tree</field>
            <field name="model">chatroom.sms.scheduled</field>
            <field name="arch" type="xml">
                <tree string="SMS Agendados" decoration-info="state == 'scheduled'"
                      decoration-success="state == 'sent'" decoration-danger="state == 'cancelled'"
                      decoration-muted="state == 'draft'">
                    <field name="name" string="Nome"/>
                    <field name="room_id" string="Sala"/>
                    <field name="scheduled_date" string="Data Agendada"/>
                    <field name="state" string="Status" widget="badge"
                           decoration-secondary="state == 'draft'"
                           decoration-info="state == 'scheduled'"
                           decoration-success="state == 'sent'"
                           decoration-danger="state == 'cancelled'"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_chatroom_sms_scheduled_form" model="ir.ui.view">
            <field name="name">chatroom.sms.scheduled.form</field>
            <field name="model">chatroom.sms.scheduled</field>
            <field name="arch" type="xml">
                <form string="SMS Agendado">
                    <header>
                        <button name="action_schedule" string="Agendar" type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_send_now" string="Enviar Agora" type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['draft', 'scheduled'])]}"/>
                        <button name="action_cancel" string="Cancelar" type="object"
                                attrs="{'invisible': [('state', 'in', ['sent', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,sent"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Ex: Campanha de Promoção" required="1"/>
                            </h1>
                        </div>

                        <group>
                            <group name="main_info">
                                <field name="room_id" required="1"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="template_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group name="schedule_info">
                                <field name="scheduled_date" required="1"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'scheduled'])]}"/>
                            </group>
                        </group>

                        <group string="Mensagem">
                            <field name="message" widget="text" required="1"
                                   placeholder="Digite a mensagem a ser enviada..."
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>

                        <notebook>
                            <page string="Resultado" name="result">
                                <group>
                                    <group name="result_info">
                                        <field name="sent_at" readonly="1"
                                               attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                                        <field name="result_message" widget="text" readonly="1"
                                               attrs="{'invisible': [('result_message', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_chatroom_sms_scheduled_search" model="ir.ui.view">
            <field name="name">chatroom.sms.scheduled.search</field>
            <field name="model">chatroom.sms.scheduled</field>
            <field name="arch" type="xml">
                <search string="Buscar SMS Agendados">
                    <field name="name" string="Nome" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="room_id" string="Sala"/>
                    <field name="message" string="Mensagem" filter_domain="[('message', 'ilike', self)]"/>
                    <field name="state" string="Status"/>

                    <separator/>

                    <filter string="Rascunho" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Agendado" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter string="Enviado" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>

                    <separator/>

                    <filter string="Hoje" name="today"
                            domain="[('scheduled_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                     ('scheduled_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <filter string="Esta Semana" name="this_week"
                            domain="[('scheduled_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                     ('scheduled_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="Este Mês" name="this_month"
                            domain="[('scheduled_date', '&gt;=', datetime.datetime.combine(context_today().replace(day=1), datetime.time(0,0,0))),
                                     ('scheduled_date', '&lt;=', (datetime.datetime.combine((context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1), datetime.time(0,0,0)) - datetime.timedelta(days=1)))]"/>

                    <separator/>

                    <filter string="Atrasados" name="overdue"
                            domain="[('scheduled_date', '&lt;', datetime.datetime.now()), ('state', '=', 'scheduled')]"/>

                    <separator/>

                    <group expand="0" string="Agrupar Por">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Sala" name="group_by_room" context="{'group_by': 'room_id'}"/>
                        <filter string="Data Agendada" name="group_by_date" context="{'group_by': 'scheduled_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_chatroom_sms_scheduled" model="ir.actions.act_window">
            <field name="name">SMS Agendados</field>
            <field name="res_model">chatroom.sms.scheduled</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_chatroom_sms_scheduled_search"/>
            <field name="context">{
                'search_default_scheduled': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crie seu primeiro SMS agendado
                </p>
                <p>
                    Agende o envio de mensagens SMS para datas e horários específicos.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_chatroom_sms_scheduled"
                  name="SMS Agendados"
                  parent="chatroom.menu_chatroom_root"
                  action="action_chatroom_sms_scheduled"
                  sequence="22"/>

    </data>
</odoo>
