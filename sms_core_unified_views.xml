<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========== SMS MESSAGE ACTION WINDOW ========== -->
        <record id="action_sms_message" model="ir.actions.act_window">
            <field name="name">SMS Messages</field>
            <field name="res_model">sms.message</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SMS Message
                </p>
                <p>
                    Send SMS messages to your contacts using various providers.
                </p>
            </field>
        </record>

        <!-- ========== SMS MESSAGE VIEWS - TREE ========== -->
        <record id="view_sms_message_tree" model="ir.ui.view">
            <field name="name">sms.message.tree</field>
            <field name="model">sms.message</field>
            <field name="arch" type="xml">
                <tree string="SMS Messages" decoration-muted="state=='canceled'" decoration-success="state=='sent'" decoration-warning="state=='outgoing'" decoration-danger="state=='error'">
                    <field name="phone"/>
                    <field name="partner_id"/>
                    <field name="body"/>
                    <field name="state"/>
                    <field name="provider_id"/>
                    <field name="cost"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- ========== SMS MESSAGE VIEWS - FORM ========== -->
        <record id="view_sms_message_form" model="ir.ui.view">
            <field name="name">sms.message.form</field>
            <field name="model">sms.message</field>
            <field name="arch" type="xml">
                <form string="SMS Message">
                    <header>
                        <button name="action_send" string="Send SMS" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft', 'error'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'not in', ['draft', 'outgoing'])]}"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,outgoing,sent,delivered,error,canceled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="phone" placeholder="Phone Number"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="user_id"/>
                                <field name="provider_id" required="1"/>
                                <field name="template_id"/>
                            </group>
                            <group>
                                <field name="cost" readonly="1"/>
                                <field name="segments" readonly="1"/>
                                <field name="sent_date" readonly="1"/>
                                <field name="delivery_date" readonly="1"/>
                            </group>
                        </group>

                        <group string="Message">
                            <field name="body" nolabel="1" placeholder="Type your message here..."/>
                        </group>

                        <group string="Error Information" attrs="{'invisible': [('state', '!=', 'error')]}">
                            <field name="error_message" nolabel="1" readonly="1"/>
                            <field name="retry_count" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ========== SMS MESSAGE SEARCH VIEW ========== -->
        <record id="view_sms_message_search" model="ir.ui.view">
            <field name="name">sms.message.search</field>
            <field name="model">sms.message</field>
            <field name="arch" type="xml">
                <search string="SMS Messages">
                    <field name="phone"/>
                    <field name="partner_id"/>
                    <field name="body"/>
                    <field name="state"/>
                    <field name="provider_id"/>

                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Outgoing" name="outgoing" domain="[('state', '=', 'outgoing')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>

                    <separator/>
                    <filter string="My Messages" name="my_messages" domain="[('user_id', '=', uid)]"/>
                    <filter string="Today" name="today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>

                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Contact" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Provider" name="group_provider" context="{'group_by': 'provider_id'}"/>
                        <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>