<?xml version="1.0"?>
<odoo>
    <record id="view_whatsapp_connector_connector_form" model="ir.ui.view">
        <field name="name">acrux.chat.connector.form</field>
        <field name="model">acrux.chat.connector</field>
        <field name="inherit_id" ref="whatsapp_connector.view_whatsapp_connector_connector_form" />
        <field name="arch" type="xml">
            <field name="source" position="after">
                <field name="is_direct_connection" widget="boolean_toggle" invisible="1" />
            </field>
            <xpath expr="//div[@name='connector_info']/div" position="attributes">
                <attribute name="attrs">{'invisible': [('is_direct_connection', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//div[@name='connector_info']/div" position="after">
                <div class="col-12" attrs="{'invisible':[('is_direct_connection','=', False)]}">
                    <!-- Hire the service in <a href="https://apichat.io" target="_blank">apichat.io</a> and we give you the ID and Token for production environment. -->
                </div>
            </xpath>
            <xpath expr="//field[@name='uuid']/.." position="after">
                <div class="mt8" attrs="{'invisible':[('is_direct_connection','=', False)]}">
<!--                     <img alt="apichat.io account" style="margin-bottom: 16px;  max-height: 120px;" class="img-fluid"
                         src='/whatsapp_connector_apichat/static/description/config_account.png'/> -->
                </div>
            </xpath>
            <xpath expr="//field[@name='token']/.." position="after">
                <div class="mt8" attrs="{'invisible':[('is_direct_connection','=', False)]}">
<!--                     <img alt="apichat.io token" style="margin-bottom: 16px; max-height: 120px;" class="img-fluid"
                         src='/whatsapp_connector_apichat/static/description/config_token.png'/> -->
                </div>
            </xpath>
        </field>
    </record>
</odoo>
