<?xml version="1.0"?>
<odoo>
    <record id="view_whatsapp_connector_connector_form" model="ir.ui.view">
        <field name="name">acrux.chat.connector.form</field>
        <field name="model">acrux.chat.connector</field>
        <field name="inherit_id" ref="whatsapp_connector.view_whatsapp_connector_connector_form" />
        <field name="arch" type="xml">
            <field name="source" position="after">
                <field name="is_connection_chatsmart" widget="boolean_toggle"  />
            </field>
            <xpath expr="//button[@name='init_free_test_wizard']" position="replace"> 
                <button name="init_free_test_wizard" type="object" string="Crear cuenta" class="btn-primary" attrs="{'invisible': [ ('connector_type', '!=', 'apichat.io')]}"/>
            </xpath>  
        </field>
    </record>
</odoo>
