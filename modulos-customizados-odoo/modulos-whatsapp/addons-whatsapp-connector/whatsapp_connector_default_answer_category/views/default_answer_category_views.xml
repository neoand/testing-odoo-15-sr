<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="view_whatsapp_connector_default_answer_category_search">
        <field name="name">acrux.chat.default.answer.category.search</field>
        <field name="model">acrux.chat.default.answer.category</field>
        <field name="arch" type="xml">
            <search string="Answer">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_whatsapp_connector_default_answer_category_inline_tree">
        <field name="name">acrux.chat.default.answer.category.inline.tree</field>
        <field name="model">acrux.chat.default.answer.category</field>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <tree editable="top" >
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="view_whatsapp_connector_default_answer_category_action">
        <field name="name">Default Answer Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acrux.chat.default.answer.category</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
