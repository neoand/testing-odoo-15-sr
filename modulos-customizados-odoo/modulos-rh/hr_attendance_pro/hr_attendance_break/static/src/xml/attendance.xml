<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">

    <t t-extend="HrAttendanceMyMainMenu">
        <t t-jquery=".o_hr_attendance_kiosk_mode .o_hr_attendance_sign_in_out_icon.fa-sign-in.btn-secondary" t-operation="after">
            <t t-set="break" t-value="widget.attendance_break_state.attendance_break_state=='break'"/>

            <t t-if="checked_in">
                <a class="fa fa-7x o_hr_attendance_break_resume_icon fa-rotate-right btn-warning" t-if="break" title="Resume"/>
                <a class="fa fa-7x o_hr_attendance_break_resume_icon fa-cutlery btn-secondary" t-if="!break" title="Break"/>
                <h3 class="mt0 mb0 text-muted">Click to <b t-if="break">resume</b>
                    <b t-if="!break">break</b>
                </h3>
            </t>
        </t>
    </t>

    <t t-extend="HrAttendanceGreetingMessage">
        <t t-jquery="button.o_hr_attendance_button_dismiss" t-operation="before">

            <t t-if="widget.attendance_break_state == 'break'">
                <div class="alert alert-info h2 mt0" role="status">
                    Break
                </div>
            </t>
            <t t-if="widget.attendance_break_state == 'resume'">
                <div class="alert alert-info h2 mt0" role="status">
                    Resume
                </div>
            </t>

        </t>
    </t>

</template>
