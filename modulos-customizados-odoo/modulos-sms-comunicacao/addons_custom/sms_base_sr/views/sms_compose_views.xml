<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sms_compose_wizard_form" model="ir.ui.view">
        <field name="name">sms.compose.form</field>
        <field name="model">sms.compose</field>
        <field name="arch" type="xml">
            <form string="Send SMS">
                <group>
                    <group>
                        <field name="partner_ids" widget="many2many_tags"/>
                        <field name="phone_numbers" readonly="1" widget="text"/>
                    </group>
                    <group>
                        <field name="template_id"/>
                        <field name="provider_id"/>
                        <field name="char_count" readonly="1"/>
                    </group>
                </group>
                <group>
                    <field name="body" widget="text" placeholder="Digite sua mensagem aqui..." required="1"/>
                </group>
                <footer>
                    <button string="Enviar SMS" name="action_send_sms" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sms_compose_wizard" model="ir.actions.act_window">
        <field name="name">Enviar SMS</field>
        <field name="res_model">sms.compose</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
