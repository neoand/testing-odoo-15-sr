<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_sms_campaign_tree" model="ir.ui.view">
        <field name="name">sms.campaign.tree</field>
        <field name="model">sms.campaign</field>
        <field name="arch" type="xml">
            <tree string="SMS Campaigns" decoration-info="state=='draft'" decoration-success="state=='done'" decoration-warning="state=='running'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="recipient_count"/>
                <field name="sent_count"/>
                <field name="delivered_count"/>
                <field name="delivery_rate" widget="percentage"/>
                <field name="total_cost" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='done'" decoration-warning="state=='running'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sms_campaign_form" model="ir.ui.view">
        <field name="name">sms.campaign.form</field>
        <field name="model">sms.campaign</field>
        <field name="arch" type="xml">
            <form string="SMS Campaign">
                <header>
                    <button name="action_start_campaign" string="Start Campaign" type="object" class="btn-primary" states="draft" confirm="Are you sure you want to send SMS to all recipients?"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,running"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" states="cancelled"/>
                    <button name="action_view_messages" string="View Messages" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button name="action_view_messages" type="object" class="oe_stat_button" icon="fa-envelope">
                            <field name="sent_count" widget="statinfo" string="Sent"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Black Friday Promo 2025"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic">
                            <field name="provider_id" options="{'no_create': True}"/>
                            <field name="template_id" options="{'no_create': True}"/>
                            <field name="recipient_count" readonly="1"/>
                        </group>
                        <group name="dates">
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Campaign description and objectives..."/>
                    </group>
                    <notebook>
                        <page string="Recipients" name="recipients">
                            <group string="Manual Selection">
                                <field name="partner_ids" widget="many2many_tags" nolabel="1"/>
                            </group>
                            <group string="Dynamic Filter (Advanced)">
                                <field name="domain_filter" nolabel="1" placeholder='[("customer_rank", "&gt;", 0)]'/>
                                <p class="text-muted">
                                    Example filters:<br/>
                                    - Customers: [("customer_rank", "&gt;", 0)]<br/>
                                    - With mobile: [("mobile", "!=", False)]<br/>
                                    - Specific city: [("city", "=", "SÃ£o Paulo")]
                                </p>
                            </group>
                        </page>
                        <page string="Statistics" name="stats">
                            <group>
                                <group string="Delivery Stats">
                                    <field name="sent_count" readonly="1"/>
                                    <field name="delivered_count" readonly="1"/>
                                    <field name="failed_count" readonly="1"/>
                                    <field name="pending_count" readonly="1"/>
                                    <field name="delivery_rate" widget="percentage" readonly="1"/>
                                </group>
                                <group string="Cost Analysis">
                                    <field name="total_cost" widget="monetary" readonly="1"/>
                                    <field name="avg_cost_per_sms" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="sms_message_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="phone"/>
                                        <field name="state"/>
                                        <field name="sent_date"/>
                                        <field name="cost"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Message &amp; Chatter" name="message">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sms_campaign_kanban" model="ir.ui.view">
        <field name="name">sms.campaign.kanban</field>
        <field name="model">sms.campaign</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="state"/>
                <field name="sent_count"/>
                <field name="delivered_count"/>
                <field name="delivery_rate"/>
                <field name="total_cost"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <span class="badge badge-pill" t-att-class="{'badge-info': record.state.raw_value=='draft', 'badge-success': record.state.raw_value=='done', 'badge-warning': record.state.raw_value=='running'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><i class="fa fa-paper-plane"/> <t t-esc="record.sent_count.value"/> sent</div>
                                <div><i class="fa fa-check-circle"/> <t t-esc="record.delivered_count.value"/> delivered</div>
                                <div><i class="fa fa-percent"/> <t t-esc="record.delivery_rate.value"/>% delivery</div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span><i class="fa fa-money"/> R$ <t t-esc="record.total_cost.value"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sms_campaign_search" model="ir.ui.view">
        <field name="name">sms.campaign.search</field>
        <field name="model">sms.campaign</field>
        <field name="arch" type="xml">
            <search string="SMS Campaigns">
                <field name="name" string="Campaign"/>
                <field name="provider_id"/>
                <field name="template_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="This Year" name="this_year" domain="[('create_date', '&gt;=', (context_today().strftime('%Y-01-01')))]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Provider" name="group_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sms_campaign" model="ir.actions.act_window">
        <field name="name">SMS Campaigns</field>
        <field name="res_model">sms.campaign</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_draft': 1, 'search_default_running': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SMS campaign
            </p>
            <p>
                Send bulk SMS to multiple recipients and track delivery statistics.
            </p>
        </field>
    </record>

</odoo>
