<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_hr_attendance_report_wizard_form" model="ir.ui.view">
            <field name="name">hr.attendance.report.wizard.wizard</field>
            <field name="model">hr.attendance.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Attendance Report">
                    <group col="4">
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <button string="Generate" class="btn-primary" name="generate_report" type="object"/>
                        <button special="cancel" class="oe_link" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_attendance_wizard" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">hr.attendance.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_attendance_report_wizard_form" />
            <field name="target">new</field>
        </record>

        <menuitem
            id="report_hr_attendance"
            parent="hr_attendance.menu_hr_attendance_report"
            name="Attendance Report"
            sequence="2"
            action="action_hr_attendance_wizard"
        />

    </data>
</odoo>