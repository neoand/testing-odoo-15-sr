<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="inherit_res_config_settings_view_form_gs" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.gs</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Tolerance Attendances" string="Tolerance Attendances" data-key="hr_attendance" groups="hr_attendance.group_hr_attendance_manager">
                  <h2>Tolerance Minutes Check - in</h2>
                    <div class="row mt16 o_settings_container" name="pincode_setting_container_gs">
                        <div class="col-12 col-lg-6 o_setting_box" title="Tolerance late minutes to check in employee.">
                            <div class="o_setting_left_pane">
                                <field name="overtime_employee_late"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Tolerance Minutes Check-in</span>
                                <div class="text-muted">
                                    Tolerance Minutes Check-in
                                </div>
                            </div>
                        </div>
                    </div>            
                </div>            
            </xpath>
            
        </field>
    </record>
</odoo>