<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cron_check_attendances" model="ir.cron">
        <field name="name">Comprobar Asistencias</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.check_attendance()</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="(datetime.now()).strftime('%Y-%m-%d 10:00:00')" />   <!--Dynamic-->
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

</odoo>
